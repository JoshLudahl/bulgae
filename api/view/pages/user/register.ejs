<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, height=device-height, initial-scale=1.0"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
      integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
    />
    <link
      type="text/css"
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/froala-design-blocks/1.0.2/css/froala_blocks.min.css"
    />

    <script
      src="https://code.jquery.com/jquery-3.3.1.min.js"
      integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous"
    ></script>

    <title>Please Register</title>
  </head>

  <body>

    <!-- Login Section -->
    <section class="fdb-block" style="background-image: url(imgs/bg_4.svg);">
      <div class="container">
        <div class="row justify-content-end">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5 text-left">
            <div class="fdb-box">
              <div class="row">
                <form action="/users/" method="POST">
                <div class="col">
                  <h1>Register</h1>
                  <p class="h3">Please enter your credentials below:</p>
                </div>
              </div>
              <div class="row">
                <div class="col mt-4">
                  <input type="text" name="email" class="form-control" placeholder="Email" />
                </div>
              </div>
              <div class="row mt-4">
                <div class="col">
                  <input
                    type="password"
                    class="form-control"
                    placeholder="Password"
                    name="password"
                  />
                </div>

              </div>
              <div class="row mt-4">
                <div class="col">
                  <input
                    type="password"
                    class="form-control"
                    placeholder="Confirm Password"
                    name="password2"
                  />
                </div>

              </div>
              <div class="row mt-4">
                <div class="col">
                  <button class="btn btn-primary" type="submit">Submit</button>
                </div>
              </div>
            </form>

            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- END Login Section -->
  </body>
</html>

  <!-- END Main Splash -->

  <!-- About Section -->
  <section id="about" class="hero is-primary is-fullheight">
    <div class="hero-body">
      <div class="container">
        <h1 class="has-text-centered"><img src="/public/assets/logo.png" alt="Bulgae" class="svglogo"></h1>
        <h1 class="title">What's this all about?</h1>
        <h2 class="subtitle">
          Bulgae was started to help you manage your money and see exactly where your money is going!
          Bulgae is a budgeting utility to help you visually see how you are spending your money.</h2>
        <a href="/users/register" class="button is-medium is-outlined">Get Started now</a>

      </div>
    </div>
  </section>
  <!-- END About Section -->

  <!-- Benefits Section -->
  <section id="benefits" class="hero is-white is-fullheight has-text-primary">
    <div class="hero-body">
      <div class="container">
        <h1 class="title has-text-centered drop">Benefits</h1>

        <div class="columns is-vcentered is-centered has-text-centered">
          <div class="column is-one-third larger">
            <span class="fa-stack">
              <i class="far fa-circle fa-stack-2x"></i>
              <i class="fas fa-brain fa-stack-1x"></i>
            </span>

            <h1 class="title is-3">Peace of Mind</h1>
            <h1 class="subtitle is-5">When you budget properly, you can have peace-of-mind knowing you're making the
              most of your money.</h1>

          </div>
          <div class="column larger">
            <span class="fa-stack">
              <i class="far fa-circle fa-stack-2x"></i>
              <i class="fas fa-hand-holding-usd fa-stack-1x"></i>
            </span>
            <h1 class="title is-3">Save Money</h1>
            <h1 class="subtitle is-5">When stick to your budget, you can save a lot of money because you know where
              your money is going.</h1>

          </div>
          <div class="column larger">
            <span class="fa-stack">
              <i class="far fa-circle fa-stack-2x"></i>
              <i class="far fa-calendar-alt fa-stack-1x"></i>
            </span>

            <h1 class="title is-3">Planning</h1>
            <h1 class="subtitle is-5">When you know where your money is going, you can better plan for things like
              vacations or owning a home.</h1>

          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END Benefits -->

  <!-- Contact Section -->
  <section id="contact" class="hero is-primary is-fullheight">
    <div class="hero-body">
      <div class="container">
        <h1 class="title has-text-centered">Contact</h1>

        <div class="columns">
          <div class="column is-6 is-offset-3">
            <div class="box">
              <form>
                <div class="field">
                  <label class="label">Name</label>
                  <div class="control">
                    <label>
                      <input class="input" type="text" placeholder="What is your name?" required>
                    </label>
                  </div>
                </div>

                <div class="field">
                  <label class="label">Email</label>
                  <div class="control has-icons-left">
                    <label>
                      <input class="input" type="email" placeholder="Email Address" value="" required>
                    </label>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                  </div>
                </div>

                <div class="field">
                  <label class="label">Message</label>
                  <div class="control">
                    <label>
                      <textarea class="textarea" placeholder="Oh, hey there..." required></textarea>
                    </label>
                  </div>
                </div>

                <div class="field is-grouped has-text-centered">
                  <div class="control">
                    <button class="button is-primary is-large" type="submit"><span class="icon">
                        <i class="fas fa-envelope"></i>
                      </span>
                      <span>Submit</span></button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END Contact Section -->


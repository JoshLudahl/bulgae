  <!-- Main Splash -->
  <section id="home" class="hero is-primary is-fullheight">
    <div class="hero-body is-white">
      <div class="container has-text-centered">
        <div class="text">
          <p class="collective">Budgets are</p>
          <p class="collective">
            <span class="word prime">smart.</span>
            <span class="word prime">wonderful.</span>
            <span class="word prime">easy.</span>
